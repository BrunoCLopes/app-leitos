<div class="cards-div d-flex flex-row">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <div class="total-card">
        <h1><%= total_beds %></h1>
        <h2>Total de Leitos</h2>
    </div>
    <div class="available-card">
        <h1><%= available_beds %></h1>
        <h2>Leitos Disponíveis</h2>
    </div>
    <div class="maintenance-card">
        <h1><%= maintenance_beds %></h1>
        <h2>Leitos em Manutenção</h2>
    </div>
    <div class="occupied-card">
        <h1><%= occupied_beds %></h1>
        <h2>Leitos Ocupados</h2>
    </div>
</div>

<div class="requests-graphic-div d-flex flex-row">
    <div class="requests">
        <h2>Solicitações</h2>
        <div class="requests-list">
            <% if (requests && requests.length > 0) { %>
                <% requests.forEach(function(req) { %>
                    <div class="request-card <%= req.tipo %>">
                        <div>
                            <span><b>Responsável:</b> <%= req.responsavel %></span>
                        </div>
                        <div>
                            <span><b>Tipo:</b> <%= req.tipoLabel %></span>
                        </div>
                        <div>
                            <span><b>Leito:</b> <%= req.leito %></span>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div style="text-align:center;">Nenhuma solicitação encontrada.</div>
            <% } %>
        </div>
    </div>

    <div class="graphic">
        <canvas id="leitosChart"></canvas>
    </div>

    <script>
        const ctx = document.getElementById('leitosChart').getContext('2d');
        const graphData = <%- JSON.stringify(graphData) %>;
        
        new Chart(ctx, {
            type: 'bar',
            data: graphData,
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            padding: 20,
                            font: {
                                size: 12
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Número de Leitos por Setor',
                            padding: 20,
                            font: {
                                size: 14,
                                weight: 'bold'
                            }
                        },
                        grid: {
                            display: true,
                            drawBorder: true,
                        },
                        ticks: {
                            stepSize: 1,
                            precision: 0
                        },
                        min: 0 // Começa do zero
                    },
                    y: {
                        grid: {
                            display: false
                        }
                    }
                },
                layout: {
                    padding: 20
                }
            }
        });
    </script>
</div>